{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "ES2016", "dom"],
    "allowJs": true,
    "paths": {
      "@services": ["app/services/*"],
      "@shared": ["app/shared/*"]
    }
  },

  "angularCompilerOptions": {
    "enableIvy": false,
    "allowEmptyCodegenFiles": true
  }
}
